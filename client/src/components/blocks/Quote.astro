---
interface QuoteProps {
  title: string;
  body: string;
}

const { title, body } = Astro.props as QuoteProps;
---

<blockquote class="relative p-8 mb-4 bg-gray-100 rounded-lg shadow-md">
  <div class="flex flex-col items-center">
    <svg class="w-10 h-10 text-gray-400 mb-4" fill="currentColor" viewBox="0 0 24 24">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
    </svg>
    <p class="text-gray-600 text-lg mb-4 text-center italic">{body}</p>
    <footer class="text-gray-500">
      <cite class="font-bold text-gray-700">- {title}</cite>
    </footer>
  </div>
</blockquote>
